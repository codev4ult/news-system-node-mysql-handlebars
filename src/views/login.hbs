{{>header}}

<div class="container col-4">
    <h1 class="text-center">Login</h1>

    {{#if message}}
        <div class="alert alert-{{message.type}}">
            {{message.text}}
        </div>
    {{/if}}

    <form action="/login" method="post">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="bruno.johnson@example.com">
            <label for="email">Email address</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="password"name="password" placeholder="Password" value="12345">
            <label for="password">Password</label>
        </div>
        <div class="d-grid gap-2 mb-3">
            <button class="btn btn-danger" type="submit">Send</button>
        </div>
    </form>
</div>

{{>footer}}